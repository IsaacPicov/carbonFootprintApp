<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcgradient">

    <TextView
        android:id="@+id/textView5"
        style="@style/SurveyTitle"
        android:layout_width="349dp"
        android:layout_height="105dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="136dp"
        android:fontFamily="sans-serif-black"
        android:text="What is the size of your home?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/q13option1"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginTop="48dp"
        android:text="Under 1000 sq. ft."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <android.widget.Button
        android:id="@+id/q13option2"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="1000-2000 sq. ft."
        app:layout_constraintStart_toStartOf="@+id/q13option1"
        app:layout_constraintTop_toBottomOf="@+id/q13option1" />

    <android.widget.Button
        android:id="@+id/q13option3"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Over 2000 sq. ft."
        app:layout_constraintStart_toStartOf="@+id/q13option2"
        app:layout_constraintTop_toBottomOf="@+id/q13option2" />


</androidx.constraintlayout.widget.ConstraintLayout>