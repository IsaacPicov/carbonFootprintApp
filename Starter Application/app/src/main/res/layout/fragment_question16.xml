<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcgradient">

    <TextView
        android:id="@+id/textView5"
        style="@style/SurveyTitle"
        android:layout_width="343dp"
        android:layout_height="164dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="What type of energy do you use to heat water in your home?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/q16option1"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Natural Gas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <android.widget.Button
        android:id="@+id/q16option2"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Electricity"
        app:layout_constraintStart_toStartOf="@+id/q16option1"
        app:layout_constraintTop_toBottomOf="@+id/q16option1" />

    <android.widget.Button
        android:id="@+id/q16option3"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Oil"
        app:layout_constraintStart_toStartOf="@+id/q16option2"
        app:layout_constraintTop_toBottomOf="@+id/q16option2" />

    <android.widget.Button
        android:id="@+id/q16option4"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Propane"
        app:layout_constraintStart_toStartOf="@+id/q16option3"
        app:layout_constraintTop_toBottomOf="@+id/q16option3" />

    <android.widget.Button
        android:id="@+id/q16option5"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Wood"
        app:layout_constraintStart_toStartOf="@+id/q16option4"
        app:layout_constraintTop_toBottomOf="@+id/q16option4" />



    </androidx.constraintlayout.widget.ConstraintLayout>

