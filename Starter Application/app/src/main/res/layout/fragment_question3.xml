<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcgradient">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="312dp"
        android:layout_height="136dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="How many kilometers/miles do you drive per year?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/teal"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/option1"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/appgradient"
        android:text="Up to 5,000 km \n (3,000 m)"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <android.widget.Button
        android:id="@+id/option2"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/appgradient"
        android:text="5,000–10,000 km \n (3,000–6,000 m)"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/option1"
        app:layout_constraintTop_toBottomOf="@+id/option1" />

    <android.widget.Button
        android:id="@+id/option3"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/appgradient"
        android:text="10,000–15,000 km \n (6,000–9,000 m)"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/option2"
        app:layout_constraintTop_toBottomOf="@+id/option2" />

    <android.widget.Button
        android:id="@+id/option4"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/appgradient"
        android:text="15,000–20,000 km \n (9,000–12,000 m)"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/option3"
        app:layout_constraintTop_toBottomOf="@+id/option3" />

    <android.widget.Button
        android:id="@+id/option5"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/appgradient"
        android:text="20,000–25,000 km \n (12,000–15,000 m)"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/option4"
        app:layout_constraintTop_toBottomOf="@+id/option4" />

    <android.widget.Button
        android:id="@+id/option6"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/appgradient"
        android:text="More than 25,000 km \n (15,000 m)"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/option1"
        app:layout_constraintTop_toBottomOf="@+id/option5" />
</androidx.constraintlayout.widget.ConstraintLayout>
