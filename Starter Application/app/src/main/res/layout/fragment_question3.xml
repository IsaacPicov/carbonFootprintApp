<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="397dp"
            android:layout_height="76dp"
            android:layout_marginTop="52dp"
            android:fontFamily="sans-serif-black"
            android:text="How many kilometers/miles do you drive per year?"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/option1"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:layout_marginTop="12dp"
            android:text="Up to 5,000 km (3,000 miles)"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/option2"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:text="5,000–10,000 km (3,000–6,000 miles)"
            app:layout_constraintTop_toBottomOf="@+id/option1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
          />

        <Button
            android:id="@+id/option3"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:text="10,000–15,000 km (6,000–9,000 miles)"
            app:layout_constraintTop_toBottomOf="@+id/option2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/option4"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:text="15,000–20,000 km (9,000–12,000 miles)"
            app:layout_constraintTop_toBottomOf="@+id/option3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
             />

        <Button
            android:id="@+id/option5"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:text="20,000–25,000 km (12,000–15,000 miles)"
            app:layout_constraintTop_toBottomOf="@+id/option4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
           />

        <Button
            android:id="@+id/option6"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:text="More than 25,000 km (15,000 miles)"
            app:layout_constraintTop_toBottomOf="@+id/option5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
