<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcgradient">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="362dp"
        android:layout_height="103dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-black"
        android:text="How often do you use public transportation?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/teal"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/q4option1"
        android:layout_width="315dp"
        android:layout_height="90dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/appgradient"
        android:text="Never"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <android.widget.Button
        android:id="@+id/q4option2"
        android:layout_width="315dp"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/appgradient"
        android:text="Occasionally \n(1-2 times/week)"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/q4option1"
        app:layout_constraintTop_toBottomOf="@+id/q4option1" />

    <android.widget.Button
        android:id="@+id/q4option3"
        android:layout_width="315dp"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/appgradient"
        android:text="Frequently \n(3-4 times/week)"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/q4option1"
        app:layout_constraintTop_toBottomOf="@+id/q4option2" />

    <android.widget.Button
        android:id="@+id/q4option4"
        android:layout_width="315dp"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/appgradient"
        android:text="Always \n(5+ times/week)"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/q4option1"
        app:layout_constraintTop_toBottomOf="@+id/q4option3" />

</androidx.constraintlayout.widget.ConstraintLayout>
