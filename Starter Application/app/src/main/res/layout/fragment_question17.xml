<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="402dp"
            android:layout_height="100dp"
            android:layout_marginTop="52dp"
            android:fontFamily="sans-serif-black"
            android:text="Do you use any renewable energy sources for electricity or heating (e.g., solar, wind)?"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/q17option1"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:layout_marginTop="12dp"
            android:text="Yes, primarily (more than 50% of energy use)"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/q17option2"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:layout_marginTop="12dp"
            android:text="Yes, partially (less than 50% of energy use)"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/q17option1" />

        <Button
            android:id="@+id/q17option3"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:layout_marginTop="12dp"
            android:text="No"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/q17option2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
