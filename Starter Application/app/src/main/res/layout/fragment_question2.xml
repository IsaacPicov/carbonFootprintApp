<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="400dp"
            android:layout_height="49dp"
            android:layout_marginTop="52dp"
            android:fontFamily="sans-serif-black"
            android:text="What Type Of Car Do You Own?"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/gasoline"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:layout_marginTop="36dp"
            android:text="Gasoline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
             />

        <Button
            android:id="@+id/diesel"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:layout_marginTop="16dp"
            android:text="Diesel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gasoline" />

        <Button
            android:id="@+id/hybrid"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:layout_marginTop="12dp"
            android:text="Hybrid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diesel" />

        <Button
            android:id="@+id/electric"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:layout_marginTop="16dp"
            android:text="Electric"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hybrid" />

        <Button
            android:id="@+id/idk"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:layout_marginTop="16dp"
            android:text="I don't know"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/electric" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
