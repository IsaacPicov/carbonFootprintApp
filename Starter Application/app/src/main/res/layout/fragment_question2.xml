<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcgradient">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="311dp"
        android:layout_height="87dp"
        android:layout_marginTop="84dp"
        android:fontFamily="sans-serif-black"
        android:text="What type of car do you own?"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/teal"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/gasoline"
        android:text="Gasoline"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/appgradient"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <android.widget.Button
        android:id="@+id/diesel"
        android:text="Diesel"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/appgradient"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/gasoline"
        app:layout_constraintStart_toStartOf="@+id/gasoline"
        app:layout_constraintTop_toBottomOf="@+id/gasoline" />

    <android.widget.Button
        android:id="@+id/hybrid"
        android:text="Hybrid"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/appgradient"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/gasoline"
        app:layout_constraintTop_toBottomOf="@+id/diesel" />

    <android.widget.Button
        android:id="@+id/electric"
        android:text="Electric"
        android:layout_marginTop="20dp"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:background="@drawable/appgradient"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/gasoline"
        app:layout_constraintTop_toBottomOf="@+id/hybrid" />

    <android.widget.Button
        android:id="@+id/idk"
        android:text="I don't know"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/appgradient"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/gasoline"
        app:layout_constraintTop_toBottomOf="@+id/electric" />
</androidx.constraintlayout.widget.ConstraintLayout>
