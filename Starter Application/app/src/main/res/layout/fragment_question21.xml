<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcgradient">

    <TextView
        android:id="@+id/textView5"
        style="@style/SurveyTitle"
        android:layout_width="292dp"
        android:layout_height="92dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="124dp"
        android:fontFamily="sans-serif-black"
        android:text="How often do you recycle?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/q21option1"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginTop="64dp"
        android:text="Never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <android.widget.Button
        android:id="@+id/q21option2"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Occasionally"
        app:layout_constraintStart_toStartOf="@+id/q21option1"
        app:layout_constraintTop_toBottomOf="@+id/q21option1" />

    <android.widget.Button
        android:id="@+id/q21option3"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Frequently"
        app:layout_constraintStart_toStartOf="@+id/q21option2"
        app:layout_constraintTop_toBottomOf="@+id/q21option2" />

    <android.widget.Button
        android:id="@+id/q21option4"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Always"
        app:layout_constraintStart_toStartOf="@+id/q21option3"
        app:layout_constraintTop_toBottomOf="@+id/q21option3" />

        <Button
            android:id="@+id/q21option4"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:layout_marginTop="12dp"
            android:text="Always"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/q21option3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
