<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcgradient">

    <TextView
        android:id="@+id/textView5"
        style="@style/SurveyTitle"
        android:layout_width="344dp"
        android:layout_height="89dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="112dp"
        android:fontFamily="sans-serif-black"
        android:text="What best describes your diet?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/vegetarian"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Vegetarian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <android.widget.Button
        android:id="@+id/vegan"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Vegan"
        app:layout_constraintStart_toStartOf="@+id/vegetarian"
        app:layout_constraintTop_toBottomOf="@+id/vegetarian" />

    <android.widget.Button
        android:id="@+id/pescatarian"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Pescatarian \n(fish/seafood)"
        app:layout_constraintStart_toStartOf="@+id/vegan"
        app:layout_constraintTop_toBottomOf="@+id/vegan" />

    <android.widget.Button
        android:id="@+id/meatbased"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="Meat-based \n(all animal products)"
        app:layout_constraintStart_toStartOf="@+id/pescatarian"
        app:layout_constraintTop_toBottomOf="@+id/pescatarian" />



    </androidx.constraintlayout.widget.ConstraintLayout>

