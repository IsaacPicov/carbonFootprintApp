<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcgradient">

    <TextView
        android:id="@+id/textView5"
        style="@style/SurveyTitle"
        android:layout_width="308dp"
        android:layout_height="176dp"
        android:layout_marginTop="36dp"
        android:text="How much time do you spend on public transport per week?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/q5option1"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginTop="28dp"
        android:text="Under 1 hour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <android.widget.Button
        android:id="@+id/q5option2"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="1-3 hours"
        app:layout_constraintStart_toStartOf="@+id/q5option1"
        app:layout_constraintTop_toBottomOf="@+id/q5option1" />

    <android.widget.Button
        android:id="@+id/q5option3"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="3-5 hours"
        app:layout_constraintStart_toStartOf="@+id/q5option2"
        app:layout_constraintTop_toBottomOf="@+id/q5option2" />

    <android.widget.Button
        android:id="@+id/q5option4"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="5-10 hours"
        app:layout_constraintStart_toStartOf="@+id/q5option3"
        app:layout_constraintTop_toBottomOf="@+id/q5option3" />

    <android.widget.Button
        android:id="@+id/q5option5"
        style="@style/SurveyButton"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:text="More than 10 hours"
        app:layout_constraintStart_toStartOf="@+id/q5option4"
        app:layout_constraintTop_toBottomOf="@+id/q5option4" />



</androidx.constraintlayout.widget.ConstraintLayout>
