<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="406dp"
            android:layout_height="99dp"
            android:layout_marginTop="52dp"
            android:fontFamily="sans-serif-black"
            android:text="How many short-haul flights (less than 1,500 km / 932 miles) have you taken in the past year?"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/q6option1"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:layout_marginTop="12dp"
            android:text="None"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/q6option2"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:text="1-2 Flights"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/q6option1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/q6option3"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:text="3-5 Flights"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/q6option2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/q6option4"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:text="6-10 Flights"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/q6option3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/q6option5"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:text="More Than 10 Flights"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/q6option4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
