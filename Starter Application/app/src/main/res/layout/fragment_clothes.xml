<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textClothes"
        style="@style/SurveyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enter number of clothing items purchased:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/editTextClothingItems"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextClothingItems"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Number of items"
        android:inputType="number"
        android:background="@drawable/text_border"

        app:layout_constraintBottom_toTopOf="@id/buttonClothesSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textClothes" />

    <android.widget.Button
        style="@style/SurveyButton"
        android:background="@drawable/appgradient"
        android:id="@+id/buttonClothesSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextClothingItems" />

</androidx.constraintlayout.widget.ConstraintLayout>
